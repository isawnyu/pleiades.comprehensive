{
	"$schema": "http://json-schema.org/schema#",
	"title": "Pleiades Project JSON Export Schema",
	"description": "Used to validate JSON exports from the Pleiades gazetteer of ancient places",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"bbox": {
			"title": "bounding box",
			"description": "southwest longitude, southwest latitude, northeast longitude, northeast latitude",
			"type": "array",
			"minItems": 4,
			"maxItems": 4,
			"items": [
				{ "$ref": "#/definitions/longitude" },
				{ "$ref": "#/definitions/latitude" },
				{ "$ref": "#/definitions/longitude" },
				{ "$ref": "#/definitions/latitude" }
			]
		},
		"citation": { "type": "string" },
		"connectsWith": { "type": "array" },
		"contributors": { 
			"type": "array",
			"items": [ { "$ref": "#/definitions/actor" } ]
		},
		"creators": { 
			"type": "array",
			"items": [ { "$ref": "#/definitions/actor" } ]
		},
		"description": { "type": "string" },
		"details": { "type": "string" },
		"features": { "type": "array" },
		"history": { "type": "array" },
		"id": { "type": "string" },
		"names": { 
			"type": "array",
			"items": [
				{ "$ref": "#/definitions/placename" }
			]
		},
		"place_types": { "type": "array" },
		"provenance": { "type": "string" },
		"references": { "type": "array" },
		"reprPoint": { 
			"title": "representative point",
			"description": "centroid or other generalized representation of features: longitude, latitude",
			"type": "array",
			"minItems": 2,
			"maxItems": 2,
			"items": [
				{ "$ref": "#/definitions/longitude" },
				{ "$ref": "#/definitions/latitude" }
			]
		},
		"title": { "type": "string" },
		"type": { "type": "string" },
		"uri": { "type": "string" }
	},
	"definitions": {
		"actor": {
			"type": "object",
			"properties": {
				"name": { "type": "string"},
				"username": { "type": "string"},
				"orcid": { "type": "string"},
				"viaf": { "type": "string"}
			},
			"required": [ "name" ]
		},
		"latitude": {
			"type": "number",
			"maximum": 90.0,
			"minimum": -90.0
		},
		"longitude": {
			"type": "number",
			"maximum": 180.0,
			"minimum": -180.0
		},
		"placename": {
			"type": "object"
		}
	}
}
