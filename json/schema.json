{
	"$schema": "http://json-schema.org/schema#",
	"title": "Pleiades Project JSON Export Schema",
	"description": "Used to validate JSON exports from the Pleiades gazetteer of ancient places",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"bbox": {
			"title": "bounding box",
			"type": "array",
			"minItems": 4,
			"maxItems": 4,
			"items": [
				{ 
					"id": "longitude_1",
					"type": "number",
					"maximum": 180.0,
					"minimum": -180.0
				},
				{ 
					"id": "latitude_1",
					"type": "number",
					"maximum": 90.0,
					"minimum": -90.0
				},
				{ 
					"id": "longitude_2",
					"type": "number",
					"maximum": 180.0,
					"minimum": -180.0
				},
				{ 
					"id": "latitude_2",
					"type": "number",
					"maximum": 90.0,
					"minimum": -90.0
				}
			]
		},
		"citation": { "type": "string" },
		"connectsWith": { "type": "array" },
		"contributors": { "type": "array" },
		"creators": { "type": "array" },
		"description": { "type": "string" },
		"details": { "type": "string" },
		"features": { "type": "array" },
		"history": { "type": "array" },
		"id": { "type": "string" },
		"names": { "type": "array" },
		"place_types": { "type": "array" },
		"provenance": { "type": "string" },
		"references": { "type": "array" },
		"reprPoint": { "type": "array" },
		"title": { "type": "string" },
		"type": { "type": "string" },
		"uri": { "type": "string" }
	}
}
