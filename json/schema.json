{
	"$schema": "http://json-schema.org/schema#",
	"title": "Pleiades Project JSON Export Schema",
	"description": "Used to validate JSON exports from the Pleiades gazetteer of ancient places",
	"type": "object",
	"properties": {
		"bbox": {
			"title": "bounding box",
			"type": "array",
			"minItems": 4,
			"maxItems": 4,
			"items": [
				{ 
					"id": "longitude_1",
					"type": "number",
					"maximum": 180.0,
					"minimum": -180.0
				},
				{ 
					"id": "latitude_1",
					"type": "number",
					"maximum": 90.0,
					"minimum": -90.0
				},
				{ 
					"id": "longitude_2",
					"type": "number",
					"maximum": 180.0,
					"minimum": -180.0
				},
				{ 
					"id": "latitude_2",
					"type": "number",
					"maximum": 90.0,
					"minimum": -90.0
				}
			]
		}
	}
}
